---
import MainLayout from '../layouts/MainLayout.astro';
import heroContactHeadset from '../assets/images/hero-contact-team.jpg';
---

<MainLayout 
  title="Contacto"
  description="Ponte en contacto con redcudi.org"
  currentPage="/contact/"
>

  <section class="min-h-[60vh] flex items-center justify-center bg-cover bg-center pt-20 pb-12" style={`background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('${heroContactHeadset.src}'); background-attachment: fixed;`}>
    <div class="section-container text-center">
      <h1 class="text-5xl md:text-6xl font-display font-bold text-white mb-6">
        Contacto
      </h1>
      <div class="h-1 bg-gradient-to-r from-transparent via-white/50 to-transparent w-24 mx-auto mb-6"></div>
      <p class="text-2xl text-neutral-100 max-w-3xl mx-auto font-light">
        Conecta con nosotres para consultas y colaboraciones
      </p>
    </div>
  </section>
</MainLayout>
